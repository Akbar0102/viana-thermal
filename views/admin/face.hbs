<!DOCTYPE html>
<html lang="en">

{{> head }}

<body>

  {{> sidenav }}
  
  
  <!-- Main content -->
  <div class="main-content" id="panel">

    {{> navbar }}
    
    <!-- Header -->
    <div class="header bg-primary pb-6">
      <div class="container-fluid">
        <div class="header-body">
          <div class="row align-items-center py-4">
            <div class="col-lg-6 col-7">
              <h6 class="h2 text-white d-inline-block mb-0">Dashboard</h6>
            </div>
            
          </div>
          
        </div>
      </div>
    </div>   
    
    <!-- Page content -->
    <div class="container-fluid mt--6">
      <div class="row">
        
        <div class="col-xl-12">
          <div class="card bg-default">
            <div class="card-header bg-transparent">
              <div class="row align-items-center">
                <div class="col">
                  <h6 class="text-light text-uppercase ls-1 mb-1">Identification</h6>
                  <h5 class="h3 text-white mb-0">Face Detection</h5>
                </div>
              </div>
            </div>
          </div>
          <div class="row"> 
            <div class="col-xl-4">
              <div id="imgcol">
                <ol id="faceid"></ol>
              </div>
            </div>
            <div class="col-xl-8">
                <img src="http://localhost:8000/video_feed" id="img" style="height: 80%; width: 100%;">
            </div>
          </div>
            <h2>Alert</h2>
          <div class="row">
            <div id="hcol">
              <ol id="alarmid"></ol>
            </div>
          </div>
        </div>

      </div>
      
      
      <!-- Footer -->
      <footer class="footer pt-0">
        <div class="row align-items-center justify-content-lg-between">
          <div class="col-lg-6">
            <div class="copyright text-center text-lg-left text-muted">
              &copy; 2019 <a href="#" class="font-weight-bold ml-1" target="_blank">Integrated Smart System Platform</a>
            </div>
          </div>
          
        </div>
      </footer>
    </div>
  </div>

  {{> scripts }}

</body>

</html>